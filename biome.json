{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120,
    "lineEnding": "lf",
    "ignore": []
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "info"
      },
      "style": {
        "noUselessElse": "off",
        "noNonNullAssertion": "warn"
      },
      "complexity": {
        "noForEach": "off"
      },
      "suspicious": {
        "noConsoleLog": "warn",
        "useAwait": "error"
      }
    },
    "ignore": ["**/.*.js", "**/node_modules/"]
  },
  "javascript": {
    "globals": ["React", "JSX"]
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "tsconfig.json",
      "tsconfig.*.json",
      "**/.vscode/**",
      "**/.turbo/**",
      "**/node_modules/**",
      "**/dist/**",
      "**/generated/**",
      "**/coverage/**",
      ".grit/**",
      "vite.config.ts"
    ]
  }
}
